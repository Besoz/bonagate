<div class="page-header">
  <%= link_to new_property_status_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Property status
  <% end %>
  <h1>Listing property_statuses</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @property_statuses) do |property_status| %>
            <td><%= property_status.code %></td>
            <td><%= property_status.name %></td>
            <td><%= link_to 'Show', property_status %></td>
        <td><%= link_to 'Edit', edit_property_status_path(property_status) %></td>
        <td><%= link_to 'Destroy', property_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
