<!-- main content -->
<!DOCTYPE html>
<!-- class="hide-sidebar top-navbar ls-bottom-footer-fixed" -->
<html class="hide-sidebar top-navbar ls-bottom-footer-fixed"
      ng-app="app" ng-controller="AppController as AppCtrl" lang="en">
<!-- ng-app="app" -->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= 'Real Estate' %></title>

    <!-- custom stylesheet -->
    <%= stylesheet_link_tag "realestate-user/all", :media => "all" %>
    <%= stylesheet_link_tag "realestate-user/#{I18n.locale}", :media => "all" %>

    <!-- Angular Toaster css -->
    <link rel="stylesheet" href="../assets/bower_components/AngularJS-Toaster/toaster.css">
    <!-- rails tag removed for confliction with the theme
    javascript_include_tag 'application'  
    -->
    <%= csrf_meta_tags %>

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <!-- Inline Script for colors and config objects; used by various external scripts; -->
    <script>
      var colors = {
        "danger-color": "#e74c3c",
        "success-color": "#81b53e",
        "warning-color": "#f0ad4e",
        "inverse-color": "#2c3e50",
        "info-color": "#2d7cb5",
        "default-color": "#6e7882",
        "default-light-color": "#cfd9db",
        "purple-color": "#9D8AC7",
        "mustard-color": "#d4d171",
        "lightred-color": "#e15258",
        "body-bg": "#f6f6f6"
      };
      var config = {
        theme: "html",
        locale: "<%= I18n.locale %>",
        maps_api_key: "<%= GOOGLE_MAPS_API_KEY %>",
        skins: {
          "default": {
            "primary-color": "#16ae9f"
          }
        }
      };
    </script>

    <!-- REAL ESTATE THEME -->
    <script src="/assets/app.realestate/vendor/all.js"></script>
    <!-- REAL ESTATE THEME -->

    <!-- Lodash -->
    <script src="../assets/bower_components/lodash/dist/lodash.min.js"></script>
    <!-- Lodash -->

    <!-- Angular -->
    <script src="../assets/bower_components/angular/angular.min.js"></script>
    <script src="../assets/bower_components/angular-cookies/angular-cookies.min.js"></script>
    <script src="../assets/bower_components/angular-animate/angular-animate.min.js"></script>
    <!-- Angular -->

    <!-- ui-bootstrap -->
    <script src="../assets/bower_components/angular-bootstrap/ui-bootstrap.min.js"></script>
    <script src="../assets/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
    <!-- ui-bootstrap -->


    <!-- Angular Translate -->
    <script src="../assets/bower_components/angular-translate/angular-translate.min.js"></script>
    <script src="../assets/bower_components/angular-translate-loader-url/angular-translate-loader-url.min.js"></script>
    <script src="../assets/bower_components/angular-translate-loader-static-files/angular-translate-loader-static-files.min.js"></script>
    <!-- Angular Translate -->

    <!-- Angular Toaster -->
    <script src="../assets/bower_components/AngularJS-Toaster/toaster.js"></script>
    <!-- Angular Toaster -->

    <!-- shared utils module -->
    <script src="/assets/app.shared/app_module.js"></script>
    <script src="/assets/app.shared/services/decorator_service.js"></script>
    <script src="/assets/app.shared/services/general_data_service.js"></script>
    <script src="/assets/app.shared/config/config_http_interceptor.js"></script>

    <!-- app module -->
    <script src="/assets/app.realestate/modules/app.js"></script>
    <!-- app module -->

    <!-- app controller -->
    <script src="/assets/app.realestate/controllers/app.controller.js"></script>

    <!-- app config -->
    <script src="/assets/app.realestate/config/config_translation.js"></script>

    <toaster-container toaster-options="{'position-class': 'toast-top-right', 'close-button':true}"></toaster-container>

    <% unless current_user.nil? %>
        <span ng-init="$root.currentUser = <%= render partial: '/users/user.json.jbuilder', :locals => { :user => current_user } %>"></span>
    <% end %>

    <%= render partial: '/layouts/header',
               formats: :html,
               handlers: :erb %>

    <%= yield %>
    <!-- render partial: '/layouts/footer',
               formats: :html,
               handlers: :erb  -->

    <!-- REAL ESTATE THEME -->
    <script src="/assets/app.realestate/app/app.js"></script>
    <!-- REAL ESTATE THEME -->

  </body>

</html>
