<div class="page-header">
  <%= link_to new_payment_record_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Payment record
  <% end %>
  <h1>Listing payment_records</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Payment</th>
            <th>Value</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @payment_records) do |payment_record| %>
            <td><%= payment_record.payment %></td>
            <td><%= payment_record.value %></td>
            <td><%= payment_record.description %></td>
            <td><%= link_to 'Show', payment_record %></td>
        <td><%= link_to 'Edit', edit_payment_record_path(payment_record) %></td>
        <td><%= link_to 'Destroy', payment_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
