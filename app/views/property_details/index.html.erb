<div class="page-header">
  <%= link_to new_property_detail_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Property detail
  <% end %>
  <h1>Listing property_details</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @property_details) do |property_detail| %>
            <td><%= property_detail.code %></td>
            <td><%= property_detail.name %></td>
            <td><%= link_to 'Show', property_detail %></td>
        <td><%= link_to 'Edit', edit_property_detail_path(property_detail) %></td>
        <td><%= link_to 'Destroy', property_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
