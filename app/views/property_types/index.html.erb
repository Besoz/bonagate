<div class="page-header">
  <%= link_to new_property_type_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Property type
  <% end %>
  <h1>Listing property_types</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Code</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @property_types) do |property_type| %>
            <td><%= property_type.code %></td>
            <td><%= link_to 'Show', property_type %></td>
        <td><%= link_to 'Edit', edit_property_type_path(property_type) %></td>
        <td><%= link_to 'Destroy', property_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
